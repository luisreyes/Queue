<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="AppTheme.Toolbar.Main" parent="@style/AppTheme">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/toolbar_primary_text</item>
        <item name="android:textColorSecondary">@color/toolbar_primary_text</item>

    </style>

    <style name="AppTheme.Toolbar.Message" parent="@style/AppTheme">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/toolbar_primary_text</item>
        <item name="android:textColorSecondary">@color/toolbar_primary_text</item>

    </style>

    <style name="AppTheme.Toolbar.Contacts" parent="@style/AppTheme">

        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/accent_light</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/toolbar_secondary_text</item>
        <item name="android:textColorSecondary">@color/toolbar_secondary_text</item>

    </style>

</resources>
